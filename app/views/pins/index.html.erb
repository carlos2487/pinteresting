<%= render 'pages/home' if !user_signed_in?%>
<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
        <div class="box panel panel-default">
          <%= link_to (image_tag pin.image.url(:medium)), pin%>
          <br>
          <div class="panel-body">
          
            <%= pin.description %>
            <br>
            <strong><%= pin.user.email if pin.user %></strong>
            
            <% if current_user == pin.user %>
              <div class="actions">
                  <%= link_to edit_pin_path(pin), class: "btn btn-primary" do %>
                    <span class="glyphicon glyphicon-edit" aria-hidden="false"></span> Editar
                  <% end %>
                  <%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" do %>
                    <span class="glyphicon glyphicon-trash" aria-hidden="false"></span> Borrar
                  <% end %>
              </div>
            <% end %>

          </div>
        </div>
  <% end %>
</div>
 <%= will_paginate @posts, renderer: BootstrapPagination::Rails%> 