<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
        <div class="box panel panel-default">
          <%= image_tag pin.image.url(:medium) %>
          <br>
          <div class="panel-body">
          
            <%= pin.description %>
            <br>
            <%= pin.user.email if pin.user %>
            <br>
            <%= link_to 'Show', pin, class: "btn btn-primary" %>


            <% if current_user == pin.user %>
              <%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-primary"%>
              <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary"%>
            <% end %>

          </div>
        </div>
  <% end %>
</div>