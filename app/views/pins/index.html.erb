<div  class="panel panel-default">
  <div  class="panel panel-heading">
      <h1>Listing pins</h1>
  </div>
  <div  class="panel panel-body center-block">
    <table>
        <table class="table">
        <tr>
          <th>Imagen</th>
          <th>Description</th>
          <th>Usuario</th>
        </tr>
          <% @pins.each do |pin| %>
              <tr>
                  <td><%= image_tag pin.image.url(:thumb) %></td>
                  <td><%= pin.description %></td>
                  <td><%= pin.user.email if pin.user %></td>
                  <td><%= link_to 'Show', pin, class: "btn btn-primary" %></td>
                  <% if current_user == pin.user %>
                    <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-primary"%></td>
                    <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
                  <% end %>
              </tr>
          <% end %>
        </table>
    </table>

    <br>

    <% if user_signed_in? %>
      <%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
    <% end %>
  </div>    
</div>
